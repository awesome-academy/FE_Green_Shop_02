											a.mainprice 279.000 đ 
									.buy_now.row
										.section_text2
											a(href='../html/shopping_cart.html') Mua ngay
										.section_search 
											i.fas.fa-search
										.section_heart
											i.fas.fa-heart
				include ../pug/include/page
		include ../pug/include/footer