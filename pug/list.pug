						-var array=["../images/sp15.png","../images/sp1.png","../images/sp2.png","../images/sp5.png","../images/sp14.png"]
						each val in array
							.row.section_right1
								.item4_1.col-md-3
									a(href='../html/detail_item.html')
										img(src=val)
								.item4_2.col-md-9
									.row
